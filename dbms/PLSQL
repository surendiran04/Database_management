SQL> CREATE TABLE EMPLOYEES (E_ID INT NOT NULL,NAME VARCHAR(15) NOT NULL,DESIGNATION VARCHAR(15),AGE DECIMAL(10,2),GENDER VARCHAR(5),PRIMARY KEY(E_ID));

Table created.                                                                                                                                          
                                                                                                                                                        
SQL> CREATE TABLE SALARY(E_ID INT NOT NULL,BASIC DECIMAL(10,2),ALLOWANCE INT,DEDUCTIONS INT,GROSS DECIMAL(10,2),NET DECIMAL(10,2));                     

Table created.                                                                                                                                          
                                                                                                                                                        
SQL> CREATE TABLE PAYSLIP(E_ID INT,SALARY DECIMAL(10,2),TAX DECIMAL(10,2));                                                                             
                                                                                                                                                        
Table created.    

