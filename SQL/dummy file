ATE ACCORDING TO THE SALARY****                                                                                                                                                                                                                                                                                                   CREATE OR REPLACE TRIGGER GENERATE_PAYSLIP                                                                                                          AFTER INSERT OR UPDATE ON SALARY                                                                                                                    FOR EACH ROW                                                                                                                                        DECLARE                                                                                                                                             TAX_RATE NUMBER;                                                                                                                    BEGIN  IF (:NEW.NET>25000) THEN     TAX_RATE:=0.2;    ELSE    TAX_RATE:=0.015;  END IF;                                                                                                                                                IF INSERTING THEN                                                                                                                                  INSERT INTO PAYSLIP VALUES(:NEW.E_ID,:NEW.BASIC,:NEW.NET*TAX_RATE);   ELSE                                                                                                                                                                                                                                     UPDATE PAYSLIP SET SALARY=:NEW.BASIC WHERE E_ID=:NEW.E_ID;                                                                                        UPDATE PAYSLIP SET TAX=:NEW.NET*TAX_RATE WHERE E_ID=:NEW.E_ID;                                                                 