SQL> CREATE OR REPLACE TRIGGER GENERATE_PAYSLIP                                                                                                         
  2  AFTER INSERT OR UPDATE ON SALARY                                                                                                                   
  3  FOR EACH ROW                                                                                                                                       
  4  DECLARE                                                                                                                                            
  5    TAX_RATE CONSTANT NUMBER :=0.1;                                                                                                                  
  6  BEGIN                                                                                                                                              
  7    IF INSERTING THEN                                                                                                                                
  8    INSERT INTO PAYSLIP VALUES(:NEW.E_ID,:NEW.BASIC,:NEW.NET*TAX_RATE);                                                                              
  9    ELSE                                                                                                                                             
 10    UPDATE PAYSLIP SET SALARY=:NEW.BASIC WHERE E_ID=:NEW.E_ID;                                                                                       
 11    UPDATE PAYSLIP SET TAX=:NEW.NET*TAX_RATE WHERE E_ID=:NEW.E_ID;                                                                                   
 12    END IF;                                                                                                                                          
 13  END;                                                                                                                                               
 14  /                                                                                                                                                  
                                                                                                                                                        
Trigger created.                                                                                                                                        
                                                                                                                                                        
